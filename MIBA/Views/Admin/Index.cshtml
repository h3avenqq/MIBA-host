else
{
    <div class="text-center auth-form">
        <main class="form-signin m-auto">
            <form autocomplete="on" method="post" asp-controller="Admin" asp-action="Index">
                <img class="mb-4" src="https://www.muctr.ru/upload/iblock/a68/a68622265299d937a9bd3543b555335d.png" alt="" width="500px">
                <h1 class="h3 mb-3 fw-normal">Введите данные для входа</h1>
                <div asp-validation-summary="All">
                    <div class="form-floating">
                        <input name="Name" type="text" class="form-control" id="floatingInput" placeholder="Имя пользователя">
                        <label for="floatingInput">Имя пользователя</label>
                    </div>
                    <div class="form-floating">
                        <input name="Password" type="password" class="form-control" id="floatingPassword" placeholder="Пароль">
                        <label for="floatingPassword">Пароль</label>
                    </div>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Войти</button>
            </form>
        </main>
    </div>
}
@model Studies
@{
    Layout = "~/Views/Shared/_CourseLayout.cshtml";
}

<div class="head-block">
    <div class="course-block">
        <div class="info">
            <h1>
                @Model.Title
            </h1>
            <p>
                @Model.Description
            </p>
            <br />

            <div class="course-info">
                <p>Формат обучения: @(Model.StudyFormat == MIBA.Enums.StudyFormat.Distant ? "Заочно":"Очно")</p>
                <p>Ближайший период проведения: @Model.StartTime.ToString("dd/mm/yyyy") - @Model.EndTime.ToString("dd/mm/yyyy")</p>
                <p>Стоимость: @Model.Cost ₽</p>
                <p>Выдаваемый документ: @Model.DocumentAfter</p>
            </div>



            <a href="" class="btn btn-primary">ЗАПИСАТЬСЯ</a>
            <a href="" class="btn outline-btn">ОСТАВИТЬ ОТЗЫВ</a>

        </div>
    </div>
</div>
<div class="circular-arrow"></div>
<div class="main-course-block">
    <h1 class="course-achivments-title">По завершении курса вы будете</h1>
    <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0 info-list">
        <li>
            <div class="circle">
                <p>1</p>
            </div>
            <div class="course-info-block">
                <div class="course-info-title">
                    <p>ЗНАТЬ</p>
                </div>

            </div>

            <div class="course-description">
                <p>
                    @Model.InfoToKnow
                </p>
            </div>
        </li>
        <li>
            <div class="circle">
                <p>2</p>
            </div>
            <div class="course-info-block">
                <div class="course-info-title">
                    <p>УМЕТЬ</p>
                </div>

            </div>

            <div class="course-description">
                <p>
                    @Model.InfoToCan
                </p>
            </div>
        </li>
        <li>
            <div class="circle">
                <p>3</p>
            </div>
            <div class="course-info-block">
                <div class="course-info-title">
                    <p>ВЛАДЕТЬ</p>
                </div>

            </div>

            <div class="course-description">
                <p>
                    @Model.InfoToUse
                </p>
            </div>
        </li>
    </ul>
    <div class="box-shadow course-program">
        <h1>Программа курса</h1>
        <ul class="justify-content-center">
            @Html.Raw(Model.CourseProgramm)
        </ul>
    </div>

    <div class="lectors">
        <h1>Лекторы курса</h1>
        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            @foreach(Lectors lector in Model.Lectors)
            {
                <li>
                    <div class="lector-name">
                        <p>@lector.FullName</p>
                    </div>
                    <div class="lector-description">
                        <p>
                            @lector.About
                        </p>
                    </div>
                </li>
            }
        </ul>
    </div>

    <div class="registration-container">
        <div class="registration">

            <h1>Записаться на курс</h1>
            <p>Для физических лиц</p>

            <form>
                <div class="input">
                    <label for="course">Название курса</label>
                    <select class="form-control" id="course">
                        <option>@Model.Title</option>
                    </select>
                </div>

                <div class="input">
                    <label for="fullname">Фамилия Имя Отчество</label>
                    <input class="form-control" id="fullname" type="text" placeholder="Иванов Иван Иванович">
                </div>


                <div class="input">
                    <label for="birthday">Дата рождения</label>
                    <input class="form-control" id="birthday" type="date">
                </div>

                <div class="input">
                    <label for="email">E-mail</label>
                    <input class="form-control" id="email" type="email" placeholder="example@mail.com">
                </div>

                <div class="input">
                    <label for="phone">Телефон</label>
                    <input class="form-control" id="phone" type="tel" placeholder="+7 (999) 999-99-99">
                </div>

                <div class="input">
                    <label for="add-info">Дополнительная информация</label>
                    <textarea class="form-control" id="add-info" rows="6" placeholder=""></textarea>
                </div>



                <input type="submit" href="" class="btn btn-primary" value="ЗАПИСАТЬСЯ">

                <p class="privacy">
                    Вы даете согласие на обработку персональных данных и соглашаетесь
                    c политикой конфиденциальности
                </p>
            </form>
        </div>

        <hr />

    <div class="registration">

        <h1>Записаться на курс</h1>
        <p>Для юридических лиц</p>

        <form>
            <div class="input">
                <label for="course">Название курса</label>
                <select class="form-control" id="course">
                    <option>@Model.Title</option>
                </select>
            </div>

            <div class="input">
                <label for="company">Название предприятия</label>
                <input class="form-control" id="company" type="text" placeholder="">
            </div>

            <div class="input">
                <label for="employers">Количество сотрудников для обучения</label>
                <input class="form-control" id="employers" type="number" placeholder="">
            </div>

            <div class="input">
                <label for="place">Место проведения</label>
                <select class="form-control" id="place">
                    <option>(не установлено)</option>
                    <option>На территории РХТУ</option>
                    <option>На территории заказчика</option>
                </select>
            </div>

            <div class="input">
                <label for="fullname">Фамилия Имя Отчество</label>
                <input class="form-control" id="fullname" type="text" placeholder="Иванов Иван Иванович">
            </div>


            <div class="input">
                <label for="birthday">Дата рождения</label>
                <input class="form-control" id="birthday" type="date">
            </div>

            <div class="input">
                <label for="email">E-mail</label>
                <input class="form-control" id="email" type="email" placeholder="example@mail.com">
            </div>

            <div class="input">
                <label for="phone">Телефон</label>
                <input class="form-control" id="phone" type="tel" placeholder="+7 (999) 999-99-99">
            </div>

            <div class="input">
                <label for="add-info">Дополнительная информация</label>
                <textarea class="form-control" id="add-info" rows="6" placeholder=""></textarea>
            </div>



            <input type="submit" href="" class="btn btn-primary" value="ЗАПИСАТЬСЯ">

            <p class="privacy">
                Вы даете согласие на обработку персональных данных и соглашаетесь
                c политикой конфиденциальности
            </p>
        </form>
    </div>
        <hr />

    <div class="registration">
        <h1>Оставить отзыв</h1>
        <form>

            <div class="input">
                <label for="fullname">Ваше имя</label>
                <input class="form-control" id="fullname" type="text" placeholder="Иван">
            </div>

            <div class="input">
                <label for="email">E-mail</label>
                <input class="form-control" id="email" type="email" placeholder="example@mail.com">
            </div>

            <div class="input">
                <label for="add-info">Отзыв</label>
                <textarea class="form-control" id="add-info" rows="6" placeholder=""></textarea>
            </div>



            <input type="submit" href="" class="btn btn-primary" value="Отправить">

            <p class="privacy">
                Вы даете согласие на обработку персональных данных и соглашаетесь
                c политикой конфиденциальности
            </p>
        </form>
    </div>
    </div>
</div>

    